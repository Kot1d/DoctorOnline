<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/corners_top_16dp"
  android:gravity="center_horizontal"
  android:orientation="vertical">

  <View
    android:layout_width="40dp"
    android:layout_height="4dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/corners_8dp"
    android:backgroundTint="@color/gray" />

  <TextView
    android:id="@+id/bottom_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:fontFamily="@font/montserrat_bold"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="16sp"
    tools:text="30 апреля, вторник, 10:00" />

  <TextView
    android:id="@+id/bottom_staff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:fontFamily="@font/montserrat_bold"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="16sp"
    tools:text="Терапевт" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:fontFamily="@font/montserrat_regular"
    android:gravity="center"
    android:text="Подтвердить запись?"
    android:textColor="@color/gray"
    android:textSize="14sp" />

  <Button
    android:id="@+id/bottom_yes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:backgroundTint="@color/red"
    android:fontFamily="@font/montserrat_bold"
    android:paddingVertical="16dp"
    android:text="Да"
    android:textColor="@color/white"
    android:textSize="14sp"
    app:cornerRadius="12dp" />

  <Button
    android:id="@+id/bottom_no"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="24dp"
    android:backgroundTint="@color/gray"
    android:fontFamily="@font/montserrat_bold"
    android:paddingVertical="16dp"
    android:text="Нет"
    android:textColor="@color/white"
    android:textSize="14sp"
    app:cornerRadius="12dp" />

</LinearLayout>